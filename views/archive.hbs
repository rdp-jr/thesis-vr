{{> header }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" type="text/javascript"></script>
<div class="container p-5 text-center">
  
  
    <h1 class="font-weight-bold">Post Session Data</h1>

     <h5> <span class="font-weight-bold">Room ID </span>{{ room_code }} </h5>
        
    <hr>

    <table class="table">
  <thead>
    <tr>
      <th scope="col">Turn on TV</th>
      <th scope="col">Turn on Radio</th>
      <th scope="col">Arrange flowers</th>
      <th scope="col">Water plants</th>
      <th scope="col">Scrapbook (optional) </th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      {{#each session}}

      
        <tr>
        <td>
            {{#if this.has_done_remote}}
            <i style="color:green" class="bi bi-check-circle-fill"></i>
            {{else}}
            <i style="color:red" class="bi bi-x-circle-fill"></i>
            {{/if}}
            </td>
        <td>
            {{#if this.has_done_radio}}
            <i style="color:green" class="bi bi-check-circle-fill"></i>
            {{else}}
            <i style="color:red" class="bi bi-x-circle-fill"></i>
            {{/if}}
        </td>
        <td>
            {{#if this.has_done_arrange}}
            <i style="color:green" class="bi bi-check-circle-fill"></i>
            {{else}}
            <i style="color:red" class="bi bi-x-circle-fill"></i>
            {{/if}}
        </td>
        <td>
            {{#if this.has_done_water}}
            <i style="color:green" class="bi bi-check-circle-fill"></i>
            {{else}}
            <i style="color:red" class="bi bi-x-circle-fill"></i>
            {{/if}}
        </td>

         <td>
            {{#if this.has_done_scrapbook}}
            <i style="color:green" class="bi bi-check-circle-fill"></i>
            {{else}}
            <i style="color:red" class="bi bi-x-circle-fill"></i>
            {{/if}}
        </td>

        <td> 
            <p class="date">{{this.timestamp}}</p>
        </td>
        
        </tr>
    {{/each}}
  </tbody>
</table>


<form method="POST" action="/room/secret" enctype="multipart/form-data">
    <input type="hidden" name="secret_key" value={{secret_key}}>
    <div class="form-group d-flex flex-column align-items-center justify-content-center p-5">
    

    
      
      <input class="btn btn-lg mt-5 btn-custom mt-5 mx-auto" type="submit" value="Go Back">
    
    </div>
  </form>

<script>
    var dates = document.getElementsByClassName('date')

    for (i = 0; i < dates.length; i++) {
        var tmp = dates[i].innerHTML
        console.log(tmp)
        dates[i].innerHTML = moment(Number(tmp)).format('MMMM Do YYYY, h:mm:ss');
        // console.log( moment(tmp).format('MMMM Do YYYY, h:mm:ss a'))
    }
    
</script>