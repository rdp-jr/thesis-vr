{{> header }}
<div class="container p-5">
  {{#if error}}
    <div class="alert alert-danger">{{ error }}</div>
  {{/if}}

  <h1 class="text-center font-weight-bold">EDIT ROOM</h1>
  <hr>
  <form method="POST" action="/room/secret" enctype="multipart/form-data">
    
    <div class="form-group d-flex flex-column align-items-center justify-content-center p-5">
    <h2 class="font-weight-bold">Enter Secret Key</h2>
    
    <div class="form-group d-flex">
      <i class="fa fa-key pt-1 pr-1" aria-hidden="true" style="font-size:x-large"></i>
      <input type="text" name="secret_key" class="form-control" autocomplete="off">
    </div>

    
      
      <input class="btn btn-lg mt-5 btn-custom mt-5 mx-auto" type="submit" value="Edit Room Settings">
    
    </div>
  </form>


  <div class="text-center"><a class="text-black" href="/get-started"><u>Go Back</u></a></div>


  

</div>
