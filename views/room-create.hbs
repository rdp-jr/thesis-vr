{{> header }}
<div class="container p-5 text-center">
  {{#if success}}
    <h2 class="font-weight-bold">Room Code {{room_code}} </h2>
    <h2 class="font-weight-bold">Secret Key {{secret_key}}</h2>
    <h5 class="text-muted">The secret key is what you use to edit room settings</h5>
    <h5 class="text-muted">Keep this safe as this cannot be recovered</h5>
    <a class="btn btn-lg mt-5 btn-custom w-25 mt-5 mx-auto" href="/room/edit">Edit Room Settings</a>
  {{else}}

    {{#if error}}
      <div class="alert alert-danger">{{ error }}</div>
    {{/if}}
    <form method="POST" action="/room/create" enctype="multipart/form-data">
        <div class="form-group d-flex flex-column align-items-center justify-content-center p-5">
          <h2 class="font-weight-bold">Data Privacy</h2>
          <p class="text-muted">Data Privacy statement here</p>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" name="checkbox">
            <label class="form-check-label" for="defaultCheck1">
              I agree
            </label>
          </div>
          <input class="btn btn-lg mt-5 btn-custom w-25 mt-5 mx-auto" type="submit" value="Create Room">
        </div>
    </form>
    <div class="text-center"><a class="text-black" href="/room/join"><u>Join Room</u></a></div>
  {{/if}}
</div>