<!-- Radio -->
<a-gltf-model id="radio-model"
    src="#radio" 
    scale="1 1 1" 
    rotation="0 0 0" 
    position="3.063 -0.168 -3.323"
    onclick="clickRadio()"
    animation__mouseenter="property: scale; to: 1.05 1.05 1.05; startEvents: mouseenter; dur: 500";
    animation__mouseleave="property: scale; to: 1 1 1; startEvents: mouseleave; dur: 500";>
</a-gltf-model>