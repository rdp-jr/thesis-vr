<!-- Radio -->
<a-gltf-model id="radio-model"
    src="#radio" 
    scale="1 1 1" 
    rotation="0 180 0" 
    position="5.107 0.095 -2.530"
    onclick="clickRadio()"
    animation__mouseenter="property: scale; to: 1.01 1.01 1.01; startEvents: mouseenter; dur: 500";
    animation__mouseleave="property: scale; to: 1 1 1; startEvents: mouseleave; dur: 500";>
</a-gltf-model>